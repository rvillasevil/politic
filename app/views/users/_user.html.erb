<li style="display: block;">
<ul style="list-style: none; padding-left: 0px; display: inline-flex; ">
  <li style="border: 0px;">
    <%= image_tag user.foto.url, class: "img-circle", size: 50 if user.foto? %>
  </li>
  <li style="border: 0px;">
    <ul style="display: inline-block; list-style: none; padding-left: 5px;">
      <li style="padding: 0px;">
        <b><%= link_to user.name, user %></b>
      </li>
      <li style="padding: 0px; border: 0px; font-size: 12px;">
        <%= user.followers.count %> seguidores
        <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
        <% end %>
      </li>
    </ul>   
  </li>  
</ul>
</li>

