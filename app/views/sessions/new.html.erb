 <div class="container" style="background-color: white; width: 100%;">
    <% provide(:title, "Log in") %>
    <div class="row">
      <div class="edit_user">
        <div class="col-md-4 col-md-offset-4">
          <h1 style="text-align: left; text-align: left; padding-left: 0px; font-weight: bolder;">Login</h1>
          <div style="padding: 30px 0px;">
            <%= form_for(:session, url: login_path) do |f| %>

              <div style="font-weight: bolder; color: #d9d9d9;">
                
                <h5 style="font-weight: bolder;"><i class="fa fa-envelope-o" aria-hidden="true" style="color: #0084B4;">&nbsp;</i><%= f.label :email %></h5>
                <h5 style="font-weight: bolder; color: #d9d9d9;"><%= f.email_field :email, class: 'form-control', placeholder: "Tu cuenta de correo electrÃ³nico" %></h5>
              </div>

              <div>
                <h5 style="font-weight: bolder;"><i class="fa fa-key" aria-hidden="true" style="color: #0084B4;"></i>&nbsp;<%= f.label :password %>
                <b><%= link_to "(forgot password)", new_password_reset_path %></b> <%= f.password_field :password, class: 'form-control', placeholder: "Password..." %></h5>
              </div>
              <h5>
                <%= f.label :remember_me, class: "checkbox inline", style: "font-size: 14px;" do %>
                  <%= f.check_box :remember_me %>
                  <span>Remember me on this computer</span>
                <% end %>
                <div style="padding-top: 20px;">
                  <%= f.submit "Log in", class: "btn btn-primary", style: "background-color: white; color: grey; border: 1px solid grey; font-weight: bolder;" %>              
                </div>
              </h5>
            <% end %>

            <div style="padding-top: 20px;">New user? <%= link_to "Sign up now!", signup_path %></div>  
          </div>
          
        </div>
      </div>
    </div>
  </div>