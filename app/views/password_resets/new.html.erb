<% provide(:title, "Forgot password") %>

<div class="container" style="background-color: white;">
	<div class="row" style="background-color: white;">
		<div class="edit_user" style="padding: 10px;">
			<h1 style="text-align: left; text-align: left; font-weight: bolder;">Forgot password</h1>
		  <div class="col-md-6 col-md-offset-3" style="padding: 30px 10px;">
		    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
		      <%= f.label :email, style: "color: #0084B4;" %>
		      <%= f.email_field :email, class: 'form-control', placeholder: "Te mandaremos un correo para generar una nueva." %>

		      <%= f.submit "Submit", class: "btn btn-primary" %>
		    <% end %>
		  </div>
		</div>
	</div>
</div>